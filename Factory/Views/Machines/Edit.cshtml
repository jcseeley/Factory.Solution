@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit @Html.DisplayFor(model => model.MachineName)</h2>
<hr/>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <h4>@Html.LabelFor(model => model.MachineName, "Machine Name:")</h4>
  @Html.EditorFor(model => model.MachineName, new { htmlAttributes = new { @required="required" } } )<br><br>
  <input type="submit" value="Save" />
}
<hr/>
<h5>@Html.ActionLink($"Back to {Model.MachineName}'s Details", "Details", new { id = Model.MachineId })</h5>