@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>
<hr/>
@if (@Model.Count == 0)
{
  <h2>No Engineers Added</h2>
}
else
{
  @foreach (Engineer engineer in Model)
  {
    <h3>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</h3>
  }
}
<hr/>
<button>@Html.ActionLink("Add Engineer", "Create")</button>